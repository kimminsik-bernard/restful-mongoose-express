{
  "extends": "airbnb-base",
  "rules": {
    "no-param-reassign": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "func-names": 0,
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "no-use-before-define": ["error", { "functions": false }]
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  }
}
